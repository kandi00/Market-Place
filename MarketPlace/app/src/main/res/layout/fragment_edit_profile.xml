<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bDark"
        tools:context=".fragment.EditProfileFragment">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_edit_profile_picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/prune" />

        <TextView
            android:id="@+id/et_edit_profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:padding="8dp"
            android:textColor="@color/dirtyWhite"
            android:textColorHint="@color/hintGrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_user_edit_profile_picture" />

        <EditText
            android:id="@+id/et_edit_profile_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/boarder"
            android:ems="10"
            android:hint="@string/user_name"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColor="@color/dirtyWhite"
            android:textColorHint="@color/hintGrey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_edit_profile_email" />

        <EditText
            android:id="@+id/tv_edit_profile_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/boarder"
            android:ems="10"
            android:hint="@string/phone_number"
            android:padding="8dp"
            android:textColor="@color/dirtyWhite"
            android:textColorHint="@color/hintGrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_edit_profile_user_name" />

        <Button
            android:id="@+id/publish_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="12"
            android:text="@string/publish"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:backgroundTint="@color/turquoise"
            android:radius="@dimen/login_fragment_button_radius"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_edit_profile_phone_number" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>