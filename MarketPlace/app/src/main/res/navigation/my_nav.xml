<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.marketplace.fragment.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_timelineFragment"
            app:destination="@id/timelineFragment" />
    </fragment>
    <fragment
        android:id="@+id/myMarketFragment"
        android:name="com.example.marketplace.fragment.MyMarketFragment"
        android:label="MyMarketFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.marketplace.fragment.ProfileFragment"
        android:label="ProfileFragment" />
    <fragment
        android:id="@+id/timelineFragment"
        android:name="com.example.marketplace.fragment.TimelineFragment"
        android:label="TimelineFragment" />
</navigation>